.\" vim: tw=72 fdm=marker cms=.\\"\ %s
.
.\" FRONT MATTER {{{
.Dd Aug 15, 2016
.Os
.Dt SMRT-BUGS 1
.
.Sh NAME
.Nm smrt\ bugs
.Nd List or browse bugs related to a maintenance request
.\" FRONT MATTER }}}
.
.\" SYNOPSIS {{{
.Sh SYNOPSIS
.Nm
. Fl h | \-help
.Nm
. Cm browse Op Ar BUG Ns ...
.Nm
. Oo Cm list Oc Op Ar BUG Ns ...
.Nm
. Cm urls Op Ar BUG Ns ...
.\" SYNOPSIS }}}
.
.\" DESCRIPTION {{{
.Sh DESCRIPTION
.Nm
is used to display information about bugs
purportedly fixed in the current maintenance update.
.Pp
This command requires a
.Sy Testreport directory .
.\" }}}
.
.\" SUBCOMMANDS {{{
.Sh SUBCOMMANDS
.
.Bl -tag -width "xxx"
.
.It Nm Cm browse Op Ar BUG Ns ...
Open given (or all)
. Ar BUG Ns s
using
. Xr xdg-open 1 .
.
.It Nm Oo Cm list Oc Op Ar BUG Ns ...
Display URLs and summaries of given (or all)
. Ar BUG Ns s
.
.It Nm Cm urls Op Ar BUG Ns ...
Display URLs of given (or all)
. Ar BUG Ns s
.
.El
.\" }}}
.
.\" OPERANDS {{{
.Sh OPERANDS
.Bl -tag -width "xxx"
.It Ar BUG
Bugzilla ticket number.
.El
.\" }}}
.
.\" SEE ALSO {{{
.Sh SEE ALSO
.Xr smrt 1 ,
.Xr smrt-bs 1 ,
.Xr smrt-fetch 1 ,
.Xr smrt-packages 1 ,
.Xr smrt-xml 1 ,
.Xr xdg-open 1 .
.\" }}}
.
.\" SMRT {{{
.Sh SMRT
.Nm
is part of
.Xr smrt 1 .
.\" }}}
