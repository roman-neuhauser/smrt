#!/bin/sh

populate() # {{{
{
  sed \
    -e "s@rootdir@$rootdirg" \
    -e "s@prefix@$prefixg" \
    -e "s@bindir@$bindirg" \
    -e "s@controlpathdir@$controlpathdirg" \
    -e "s@datarootdir@$datarootdirg" \
    -e "s@mandir@$mandirg" \
    -e "s@preludedir@$preludedirg" \
    -e "s@runstatedir@$runstatedirg" \
    -e "s@sysconfdir@$sysconfdirg" \
    $1 \
  > $2
} # }}}

rootdir=$(dirname $(realpath $0))

prefix=/usr/local
bindir='${prefix}/bin'
controlpathdir='${runstatedir}/user/%u/smrt'
datarootdir='${prefix}/share'
mandir='${datarootdir}/man'
mandir_set=0
preludedir='${datarootdir}/smrt'
runstatedir='/var/run'
runstatedir_set=0
sysconfdir='${prefix}/etc'
sysconfdir_set=0

for a in "$@"; do
  case $a in
  --bindir=*)       bindir="${a#*=}"      ;;
  --controlpathdir=*)
    controlpathdir="${a#*=}"
  ;;
  --datarootdir=*)  datarootdir="${a#*=}" ;;
  --mandir=*)
    mandir="${a#*=}"
    mandir_set=1
  ;;
  --prefix=*)       prefix="${a#*=}"      ;;
  --preludedir=*)   preludedir="${a#*=}"  ;;
  --runstatedir=*)
    runstatedir="${a#*=}"
    runstatedir_set=1
  ;;
  --sysconfdir=*)
    sysconfdir="${a#*=}"
    sysconfdir_set=1
  ;;
  esac
done

if test "$prefix" = /usr && test $sysconfdir_set = 0; then
  sysconfdir=/etc
fi

if test "$prefix" = /usr/local && test $mandir_set = 0; then
  mandir=$prefix/man
fi

populate $rootdir/GNUmakefile.in GNUmakefile
